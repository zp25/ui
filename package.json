{
  "name": "zp-ui",
  "version": "0.6.1",
  "description": "UI",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "scripts": {
    "upgrade-interactive": "npm-check -u",
    "start": "rollup -c -w",
    "stylelint": "stylelint 'styles/**/*.scss'",
    "build": "rollup -c && npm run stylelint",
    "test": "cross-env BABEL_ENV=test nyc mocha --require @babel/register",
    "analyze": "source-map-explorer",
    "prejsdoc": "rimraf docs/*",
    "jsdoc": "jsdoc -r -c jsdoc.json -d docs",
    "open": "open docs/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zp25/zp-ui.git"
  },
  "author": "zp25 <zebrap25@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "zp-lib": "^0.1.7"
  },
  "peerDependencies": {
    "zp-lib": "^0.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "core-js": "^3.1.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "jsdoc": "^3.6.2",
    "jsdoc-strip-async-await": "^0.1.0",
    "jsdom": "^15.1.1",
    "mocha": "^6.1.4",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-eslint": "^6.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "sinon": "^7.3.2",
    "source-map-explorer": "^2.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-sass-guidelines": "^6.0.0"
  },
  "engines": {
    "node": ">=8.16.0"
  }
}
