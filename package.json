{
  "name": "zp-ui",
  "version": "0.6.2",
  "description": "UI",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "scripts": {
    "upgrade-interactive": "npm-check -u",
    "start": "rollup -c -w",
    "stylelint": "stylelint 'styles/**/*.scss'",
    "build": "rollup -c && npm run stylelint",
    "test": "cross-env BABEL_ENV=test nyc mocha --require @babel/register",
    "analyze": "source-map-explorer",
    "prejsdoc": "rimraf docs/*",
    "jsdoc": "jsdoc -r -c jsdoc.json -d docs",
    "open": "open docs/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zp25/zp-ui.git"
  },
  "author": "zp25 <zebrap25@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "zp-lib": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "core-js": "^3.2.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.5",
    "jsdoc": "^3.6.3",
    "jsdoc-strip-async-await": "^0.1.0",
    "jsdom": "^15.1.1",
    "mocha": "^6.2.0",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "sinon": "^7.5.0",
    "source-map-explorer": "^2.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-sass-guidelines": "^6.1.0"
  },
  "engines": {
    "node": ">=8.16.0"
  }
}
