{
  "name": "zp-ui",
  "version": "0.1.9",
  "description": "UI",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "legacy": "dist/legacy.cjs.js",
  "scripts": {
    "start": "rollup -c -w",
    "stylelint": "stylelint 'styles/**/*.scss'",
    "build": "rollup -c && npm run stylelint",
    "test": "cross-env BABEL_ENV=test nyc mocha --harmony --require @babel/register",
    "prejsdoc": "rimraf docs/*",
    "jsdoc": "jsdoc -r -c jsdoc.json -d docs",
    "open": "open docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zp25/zp-ui.git"
  },
  "author": "zp25 <zebrap25@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.37",
    "@babel/polyfill": "7.0.0-beta.37",
    "@babel/preset-env": "7.0.0-beta.37",
    "@babel/preset-stage-0": "7.0.0-beta.37",
    "@babel/register": "7.0.0-beta.37",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jsdoc": "^3.5.5",
    "jsdoc-strip-async-await": "^0.1.0",
    "jsdom": "^11.5.1",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.53.4",
    "rollup-plugin-babel": "^4.0.0-beta.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "sinon": "^4.1.4",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0"
  },
  "engines": {
    "node": ">=8.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "chrome >= 43",
    "safari >= 8",
    "ios >= 8",
    "not ie < 11"
  ]
}
